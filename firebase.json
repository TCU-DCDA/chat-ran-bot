{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api",
        "function": {
          "functionId": "api",
          "region": "us-central1"
        }
      },
      {
        "source": "/feedback",
        "function": {
          "functionId": "feedback",
          "region": "us-central1"
        }
      },
      {
        "source": "/admin/articles",
        "function": {
          "functionId": "adminArticles",
          "region": "us-central1"
        }
      },
      {
        "source": "/admin/articles/**",
        "function": {
          "functionId": "adminArticle",
          "region": "us-central1"
        }
      },
      {
        "source": "/admin/feedback",
        "function": {
          "functionId": "adminFeedback",
          "region": "us-central1"
        }
      },
      {
        "source": "/admin/conversations",
        "function": {
          "functionId": "adminConversations",
          "region": "us-central1"
        }
      },
      {
        "source": "/admin/fetch-url",
        "function": {
          "functionId": "fetchUrlMetadata",
          "region": "us-central1"
        }
      },
      {
        "source": "/admin/rss-check",
        "function": {
          "functionId": "triggerRssCheck",
          "region": "us-central1"
        }
      },
      {
        "source": "/admin/openalex-check",
        "function": {
          "functionId": "triggerOpenAlexCheck",
          "region": "us-central1"
        }
      },
      {
        "source": "/admin/backfill-scores",
        "function": {
          "functionId": "backfillRelevanceScores",
          "region": "us-central1"
        }
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs22"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
