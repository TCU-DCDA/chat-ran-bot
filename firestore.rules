rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Programs collection - read-only for all users
    match /programs/{programId} {
      allow read: if true;
      allow write: if false;
    }

    // Config collection - read-only for all users
    match /config/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Conversations collection - write for logging, no read from client
    match /conversations/{conversationId} {
      allow read: if false;
      allow create: if true;
      allow update, delete: if false;
    }

    // Articles collection - read-only for chatbot
    match /articles/{articleId} {
      allow read: if true;
      allow write: if false;
    }

    // Rate limit counters - server-only (Admin SDK bypasses rules)
    match /rateLimits/{docId} {
      allow read, write: if false;
    }
  }
}
